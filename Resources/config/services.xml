<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pagination.manager" class="Cannibal\Bundle\PaginationBundle\Pagination\Manager">
            <argument type="service" id="pagination.paginated_items.factory"/>
        </service>
        <service id="pagination.configuration.factory" class="Cannibal\Bundle\PaginationBundle\Pagination\Factory\PaginationConfigFactory"/>
        <service id="pagination.paginated_items.factory" class="Cannibal\Bundle\PaginationBundle\Pagination\Factory\PaginatedItemsFactory"/>
    </services>
</container>
