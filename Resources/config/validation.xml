<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Cannibal\Bundle\PaginationBundle\Pagination\PaginationConfig">
        <property name="current">
            <constraint name="NotNull"/>
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">1</constraint>
        </property>

        <property name="itemsPerPage">
            <constraint name="NotNull"/>
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">1</constraint>
        </property>
    </class>


    <class name="Cannibal\Bundle\PaginationBundle\Pagination\Paginated\PaginatedCollection">
        <property name="current">
            <constraint name="NotNull"/>
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">1</constraint>
        </property>

        <property name="itemsPerPage">
            <constraint name="NotNull"/>
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">1</constraint>
        </property>

        <property name="next">
            <constraint name="NotNull"/>
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">
                <option name="limit">
                    <value>1</value>
                </option>
            </constraint>
        </property>

        <property name="previous">
            <constraint name="NotBlank"/>
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">
                <option name="limit">
                    <value>1</value>
                </option>
            </constraint>
        </property>

        <property name="totalItems">
            <constraint name="NotBlank"/>
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">
                <option name="limit">
                    <value>0</value>
                </option>
            </constraint>
        </property>

        <property name="totalPages">
            <constraint name="NotBlank"/>
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">
                <option name="limit">
                    <value>1</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>