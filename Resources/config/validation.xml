<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Cannibal\Bundle\PaginationBundle\Pagination\PaginationConfig">
        <property name="page">
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">1</constraint>
        </property>

        <property name="perPage">
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">1</constraint>
        </property>

        <property name="bypass">
            <constraint name="NotNull"/>
            <constraint name="Type">boolean</constraint>
        </property>
    </class>


    <class name="Cannibal\Bundle\PaginationBundle\Pagination\Paginated\PaginatedCollection">

    </class>

    <class name="Cannibal\Bundle\PaginationBundle\Pagination\Paginated\Collection\Metadata">
        <property name="page">
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">1</constraint>
        </property>

        <property name="perPage">
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">1</constraint>
        </property>

        <property name="nextPage">
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">
                <option name="limit">
                    <value>1</value>
                </option>
            </constraint>
        </property>

        <property name="previousPage">
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">
                <option name="limit">
                    <value>1</value>
                </option>
            </constraint>
        </property>

        <property name="totalResults">
            <constraint name="NotNull"/>
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">
                <option name="limit">
                    <value>0</value>
                </option>
            </constraint>
        </property>

        <property name="totalPages">
            <constraint name="Regex">
                <option name="pattern">/^\d+/</option>
            </constraint>
            <constraint name="Min">
                <option name="limit">
                    <value>1</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>